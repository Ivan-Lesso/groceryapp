<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="main-container container jumbotron">

      <h1>Edit List</h1>
      <% include ../static/partials/messages.ejs %>

      <form action="/lists/<%= list.id %>/update" method="post">
        <div class="form-group">
          <label for="title">List title</label>

          <input value="<%= list.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
          <small class="text-muted" id="titleHelp">title must be 5 or more characters in length.</small>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
